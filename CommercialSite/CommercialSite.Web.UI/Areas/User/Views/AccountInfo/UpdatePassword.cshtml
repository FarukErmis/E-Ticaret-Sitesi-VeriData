@model ChangePasswordVM
@{
    ViewBag.Title = "InfoPanel";
}
<link href="~/Content/my-css/ShoppingCart.css" rel="stylesheet" />
<link href="~/Content/my-css/PanelInfo.css" rel="stylesheet" />
<script src="~/Content/jquery/jquery.js"></script>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Şifremi Değiştir</h4>
                </div>
                <form asp-controller="AccountInfo" asp-action="ChangePassword" method="post" enctype="multipart/form-data">
                    @TempData["Message"]
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Eski Şifre</label><input type="password" class="form-control" asp-for="OldPassword" value=""></div>
                        <div class="col-md-6"><label class="labels">Yeni Şifre</label><input type="password" class="form-control" asp-for="NewPassword" value=""></div>
                        <div class="col-md-6"><label class="labels">Yeni Şifre</label><input type="password" class="form-control" asp-for="NewPassword2" value=""></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mt-5 text-center">
                                <button class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-5 text-center"><a class="btn btn-warning" type="button" asp-controller="AccountInfo" asp-action="InfoPanel">İptal Et</a></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>