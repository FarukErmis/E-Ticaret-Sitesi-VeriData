@model UpdateShippingAddressViewModel
@{
    ViewBag.Title = "InfoPanel";
}
<link href="~/Content/my-css/ShoppingCart.css" rel="stylesheet" />
<link href="~/Content/my-css/PanelInfo.css" rel="stylesheet" />
<script src="~/Content/jquery/jquery.js"></script>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Fatura Adres</h4>
                </div>
                <form asp-controller="AccountInfo" asp-action="UpdateShippingAdress" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Ad</label><input type="text" class="form-control" asp-for="FirstName" value=""></div>
                        <div class="col-md-6"><label class="labels">Soyad</label><input type="text" class="form-control" value="" asp-for="SurName"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Ülke</label><input type="text" class="form-control" asp-for="Country" value=""></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Şehir</label><input type="text" class="form-control" asp-for="Location" value=""></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">İlçe</label><input type="text" class="form-control" asp-for="SubLocation" value=""></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Adres</label><input type="text" class="form-control" asp-for="Adress" value=""></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Telefon</label><input type="text" class="form-control" asp-for="PhoneNumber" value=""></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" asp-for="Email" value=""></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mt-5 text-center">
                                <button class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mt-5 text-center"><a class="btn btn-warning" type="button" asp-controller="AccountInfo" asp-action="InfoPanel">İptal Et</a></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>