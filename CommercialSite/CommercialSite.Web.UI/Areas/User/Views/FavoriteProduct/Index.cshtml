@model IEnumerable<FavoriteProductViewModel>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/my-css/ShoppingCart.css" rel="stylesheet" />
<script src="~/Content/jquery/jquery.js"></script>

<div class="container-fluid ml-lg-5 mt-lg-5 mb-lg-5">
    <div class="row ml-lg-5 mr-lg-5">
        <div class="col-lg-8 mr-5 hat-cek throw-product">

            <div class="row alt-hat">
                <h3 class="ml-lg-5 mb-lg-4 mt-3">Sepetim<span class="bi bi-arrow-down-short ml-2"></span> <small class="ml-3">@Model.Count() Ürün</small></h3>
            </div>
            <div class="col-lg-12 mr-5 hat-cek throw-product">


                @foreach (var item in Model)
                {

                    <div class="row mt-3 productList">
                        <div class="col-lg-2 mr-2 ml-2">
                            <a asp-controller="ProductDetail" asp-action="Index" asp-area="" asp-route-id="@item.Product.Id">
                                <img class="img-fluid" src="@Url.Content($"~/Upload/ProductImages/{item.Product.ProductImages.FirstOrDefault().ImageUrl}")" alt="@item.Product.ProductImages.FirstOrDefault()">
                            </a>
                        </div>
                        <div class="col-lg-7 mr-lg-3">
                            <h6><a asp-controller="ProductDetail" asp-action="Index" asp-area="" asp-route-id="@item.ProductId" class="none-underline link-primary"><b>@item.Product.ProductName</b></a></h6>
                            <div class="row mt-3">
                                <div class="col-lg-3">
                                    <p class="text-center"><a asp-controller="ProductList" asp-action="Index" asp-area="" asp-route-name="@item.Product.Brand.BrandName" class="none-underline link-default">@item.Product.Brand.BrandName</a></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-5 ml-5 ">
                                    <h4 class="price">@item.Product.DiscountPrice.ToString() TL</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="row ">
                                <div class="col-lg-4 ml-4 mt-4">
                                    <a asp-controller="FavoriteProduct" asp-action="Delete" asp-route-id="@item.Id"><span class="bi bi-trash" data-toggle="tooltip" title="Ürünü Favorilerimden Kaldır" data-placement="right"></span></a>
                                </div>

                            </div>
                        </div>
                    </div>
                    <p class="hat-cek"></p>
                }
            </div>
        </div>
    </div>
</div>
