@model CreateOrderInfoViewModel
@{
    ViewBag.Title = "InfoPanel";
}
<link href="~/Content/my-css/ShoppingCart.css" rel="stylesheet" />
<link href="~/Content/my-css/PanelInfo.css" rel="stylesheet" />
<script src="~/Content/jquery/jquery.js"></script>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-2 border-right">

        </div>
        <div class="col-md-8 border-right">
            <form asp-controller="OrderInfo" asp-action="Insert" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 border-left">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Teslimat Adres</h4>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label class="labels">Ad</label>
                                    <input type="text" class="form-control" asp-for="BillingFirstName">
                                </div>
                                <div class="col-md-6">
                                    <label class="labels">Soyad</label>
                                    <input type="text" class="form-control" asp-for="BillingSurname">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Ülke</label>
                                    <input type="text" class="form-control" asp-for="BillingCountry">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Şehir</label>
                                    <input type="text" class="form-control" asp-for="BillingLocation">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">
                                        İlçe
                                    </label>
                                    <input type="text" class="form-control" asp-for="BillingSubLocation">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Adres</label>
                                    <input type="text" class="form-control" asp-for="BillingAddress">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Telefon</label>
                                    <input type="text" class="form-control" asp-for="BillingPhoneNumber">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Email</label>
                                    <input type="text" class="form-control" asp-for="BillingEmail">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Fatura Adres</h4>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label class="labels">Ad</label>
                                    <input type="text" class="form-control" asp-for="ShippingFirstName">
                                </div>
                                <div class="col-md-6">
                                    <label class="labels">Soyad</label>
                                    <input type="text" class="form-control" asp-for="ShippingSurname">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Ülke</label>
                                    <input type="text" class="form-control" asp-for="ShippingCountry">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Şehir</label>
                                    <input type="text" class="form-control" asp-for="ShippingLocation">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">
                                        İlçe
                                    </label>
                                    <input type="text" class="form-control" asp-for="ShippingSubLocation">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Adres</label>
                                    <input type="text" class="form-control" asp-for="ShippingAddress">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Telefon</label>
                                    <input type="text" class="form-control" asp-for="ShippingPhoneNumber">
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label class="labels">Email</label>
                                    <input type="text" class="form-control" asp-for="ShippingEmail">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-12 mb-30">
                        <select asp-for="ShipmentInfoId" asp-items="@ViewBag.ShipmentInfos" class="form-control">
                            <option>Lütfen tercih ettiğiniz kargoyu seçin..</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="mt-2 mb-3 text-center">
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        
            <div class="col-md-2 border-right">

            </div>
    </div>
    </div>