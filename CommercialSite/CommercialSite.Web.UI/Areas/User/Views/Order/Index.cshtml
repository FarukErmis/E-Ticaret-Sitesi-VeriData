@model List<OrderViewModel>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/my-css/ShoppingCart.css" rel="stylesheet" />
<script src="~/Content/jquery/jquery.js"></script>

@if (Model != null)
{

    <div class="container-fluid ml-lg-5 mt-lg-5 mb-lg-5">
        <div class="row ml-lg-5 mr-lg-5">
            <div class="col-lg-12 mr-5 hat-cek throw-product">

                <div class="row alt-hat">
                    <h3 class="ml-lg-5 mb-lg-4 mt-3">Siparişlerim<span class="bi bi-arrow-down-short ml-2"></span> <small class="ml-3">@Model.Count() Ürün</small></h3>
                </div>

                @foreach (var models in Model.GroupBy(x => x.OrderInfoId))
                {
                    <div style="border:3px double red;" class="mb-5 mt-5">
                        <div class="row">
                            <div class="col-lg-8">
                                @foreach (var item in models)
                                {
                                    <div class="row mt-3 productList">
                                        <div class="col-lg-2 mr-2 ml-2">
                                            <a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.ProductId">
                                                <img class="img-fluid" src="@Url.Content($"~/Upload/ProductImages/{item.Product.ProductImages.Select(x=>x.ImageUrl).FirstOrDefault()}")" alt="@item.Product.ProductImages.Select(x=>x.ImageUrl).FirstOrDefault()">
                                            </a>
                                        </div>
                                        <div class="col-lg-5 mr-lg-3">
                                            <h6><a asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.Id" class="none-underline link-primary"><b>@item.Product.ProductName</b></a></h6>
                                            <div class="row mt-3">
                                                <div class="col-lg-3">
                                                    <p class="text-center"><a asp-controller="ProductList" asp-action="Index" asp-route-name="@item.Product.Brand.BrandName" class="none-underline link-default">@item.Product.Brand.BrandName</a></p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-5 ml-5 ">
                                                    <h4 class="price">@item.Product.DiscountPrice.ToString() TL</h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @{
                                int a = 1;
                            }
                            @foreach (var item in models)
                            {
                                if (a == 1)
                                {
                                    <div class="col-lg-12 float-right ">
                                        <div class="row">
                                            <div class="col-md-6 border-left">
                                                <div class="p-3 py-5">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <h4 class="text-right">Teslimat Adres</h4>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingFirstName">
                                                        </div>
                                                        <div class="col-md-6 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingSurname">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingLocation">
                                                        </div>
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingSubLocation">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingAddress">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingPhoneNumber">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.BillingEmail">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="p-3 py-5">
                                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                                        <h4 class="text-right">Fatura Adres</h4>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingFirstName">
                                                        </div>
                                                        <div class="col-md-6 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingSurname">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingLocation">
                                                        </div>
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingSubLocation">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingAddress">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingPhoneNumber">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 mt-2">
                                                            <input type="text" class="form-control" readonly="readonly" placeholder="@item.OrderInfo.ShippingEmail">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    a = 0;
                                }

                            }

                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid ml-lg-5 mt-lg-5 mb-lg-5">
        <div class="row ml-lg-5 mr-lg-5">
            <div class="col-lg-8 mr-5 hat-cek throw-product">
                <div class="row alt-hat">
                    <h3 class="ml-lg-5 mb-lg-4 mt-3">Sepetim<span class="bi bi-arrow-down-short ml-2"></span> <small class="ml-3">0 Ürün</small></h3>
                </div>
                <h1>Sepetinizde ürün bulunmamaktadır.</h1>
            </div>
        </div>
    </div>
}