@model List<OrderViewModel>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_YöneticiLayout.cshtml";
    }

    <div class="content-body">
        <div class="row justify-content-between align-items-center mb-10">
            <div class="col-12 col-lg-auto mb-20">
                <div class="page-heading">
                    <h3 class="title">List <span>/ Siparişler</span></h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-30">
                <div class="box">
                    <div class="box-body">
                        <table class="table table-bordered data-table data-table-default">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>User ID</th>
                                    <th>User Email</th>
                                    <th>User Name</th>
                                    <th>User Surname</th>
                                    <th>Sipariş Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (OrderViewModel item in Model)
                                {
                                <tr>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.UserId</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.User.FirstName</td>
                                    <td>@item.User.LastName</td>
                                    <td>@item.CreatedDate</td>
                                    <td><partial name="PartialViews/_StatusPartial" model="item.Status" /></td>
                                    @*
                                    <td>
                                        <a asp-controller="Product" asp-action="Activate" asp-route-id="@item.Id" class="btn">Activate</a>
                                        <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn">Update</a>
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn">Delete</a>
                                    </td>*@
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
    <script src="~/admin/assets/js/plugins/datatables/datatables.min.js"></script>
    <script src="~/admin/assets/js/plugins/datatables/datatables.active.js"></script>
    }

